@model aspnet_core___Copia.Models.Chamado

<div class="form-horizontal">
    <form action="Edit" method="Post">

        <div class="form-group">
            <label>Id</label>
            <input  class="form-control"
                    type="text" 
                    name="id"
                    value="@Model.id"
                    readonly/>
        </div>

        <div class="form-group">
            <label>Número Chamado</label>
            <input  class="form-control"
                    type="text" 
                    name="numCall"
                    value="@Model.numCall"/>
        </div>

        <div class="form-group">
            <label>Número Solicitante</label>
            <input  class="form-control"
                    type="text"
                    name="numPerson"
                    value="@Model.numPerson"/>
        </div>

        <div class="form-group">
            <label>Descricao do Problema</label>
            <input  class="form-control"
                    type="text" 
                    name="descProblema"
                    value="@Model.descProblema"/>
        </div>

        <div class="form-group">
            <label>Email</label>
            <input  class="form-control"
                    type="text" 
                    name="email"
                    value="@Model.email"/>
        </div>

        <div class="form-group">
            <label>Horario Inicio</label>
            <input  class="form-control"
                    type="text" 
                    name="horaInicio"
                    value="@Model.horaInicio"/>
        </div>

        <div class="form-group">
            <label>Horario Fim</label>
            <input  class="form-control"
                    type="text" 
                    name="horaFim"
                    value="@Model.horaFim"/>
        </div>

        <div class="form-group">
            <label>Celular</label>
            <input  class="form-control"
                    type="text" 
                    name="cell"
                    value="@Model.cell"/>
        </div>

        <input  class="btn btn-primary" 
                type="submit" value="Editar"/>

    </form>
</div>